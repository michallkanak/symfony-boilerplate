{% extends 'base.html.twig' %}

{% block title %}{{ 'security.login.title'|trans }}{% endblock %}

{% block body %}
<body class="login-page">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="lock-icon">
                    <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
                        <path d="M12 2C9.243 2 7 4.243 7 7v3H6c-1.103 0-2 .897-2 2v8c0 1.103.897 2 2 2h12c1.103 0 2-.897 2-2v-8c0-1.103-.897-2-2-2h-1V7c0-2.757-2.243-5-5-5zm6 10 .002 8H6v-8h12zm-9-2V7c0-1.654 1.346-3 3-3s3 1.346 3 3v3H9z"/>
                    </svg>
                </div>
                <h1>{{ 'security.login.header'|trans }}</h1>
                <p>{{ 'security.login.subheader'|trans }}</p>
            </div>

            {% if error %}
                <div class="alert alert-danger" role="alert">
                    <strong>{{ 'security.login.error'|trans }}:</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">{{ 'security.login.email'|trans }}</label>
                    <input 
                        type="email" 
                        value="{{ last_username }}" 
                        name="_username" 
                        id="inputEmail" 
                        class="form-control" 
                        placeholder="{{ 'security.login.email_placeholder'|trans }}"
                        autocomplete="email" 
                        required 
                        autofocus
                    >
                </div>

                <div class="mb-3">
                    <label for="inputPassword" class="form-label">{{ 'security.login.password'|trans }}</label>
                    <input 
                        type="password" 
                        name="_password" 
                        id="inputPassword" 
                        class="form-control" 
                        placeholder="{{ 'security.login.password_placeholder'|trans }}"
                        autocomplete="current-password" 
                        required
                    >
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="d-grid">
                    <button class="btn-login" type="submit">
                        {{ 'security.login.submit'|trans }}
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
{% endblock %}
